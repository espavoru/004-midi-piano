//- Все примеси в этом файле должны начинаться c имени блока (pugTut)

mixin pugTut(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +pugTut('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' pugTut--' + modsList[i].trim();
      }
    }

  .pugTut(class=allMods)&attributes(attributes)
    .pugTut__inner
      block
